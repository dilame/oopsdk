{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "lib": [
      "ES2020"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "reflect-metadata"
    ]
  }
}
